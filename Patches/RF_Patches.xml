<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <!--=======================  Horseshoe Pin =======================-->
  
  <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]/minTechLevelToBuild</xpath>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]</xpath>
		<value>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]</xpath>
		<value>
  		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers> 
		</value>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]/rotatable</xpath>
		<value>
      <rotatable>true</rotatable>
		</value>
  </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]/graphicData/graphicClass</xpath>
      <value>
      <graphicClass>Graphic_Multi</graphicClass>
      </value>
   </Operation>
   
  <Operation Class="PatchOperationAdd"> 
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]</xpath>
		<value>
       <defaultPlacingRot>North</defaultPlacingRot>
		</value>
  </Operation>

