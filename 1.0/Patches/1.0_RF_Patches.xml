<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!--======================= v1.0 Exclusive Horseshoe Pin =======================-->
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]</xpath>
		<value>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]</xpath>
		<value>
  		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers> 
		</value>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]/rotatable</xpath>
		<value>
      <rotatable>true</rotatable>
		</value>
  </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]/graphicData/graphicClass</xpath>
      <value>
      <graphicClass>Graphic_Multi</graphicClass>
      </value>
   </Operation>
   
  <Operation Class="PatchOperationAdd"> 
    <xpath>/Defs/ThingDef[defName = "HorseshoesPin"]</xpath>
		<value>
       <defaultPlacingRot>North</defaultPlacingRot>
		</value>
  </Operation>
  
